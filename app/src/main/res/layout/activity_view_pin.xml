<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/ll_view"

        android:orientation="vertical"
        tools:context="com.apt_x.app.views.activity.signup.VerifyPhoneActivity">

        <include
            android:id="@+id/ll_upper"
            layout="@layout/top_header" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/card_pin"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/iv_bg"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/tv_code_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:hint="-"
                    android:textColorHint="@color/gray_light"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="18sp"
                    tools:ignore="TextViewEdits" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/iv_bg"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/tv_code_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:fontFamily="@font/lato_regular"
                    android:hint="-"
                    android:textColorHint="@color/gray_light"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:ignore="TextViewEdits" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_weight="1"

                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/iv_bg"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/tv_code_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato_regular"
                    android:hint="-"
                    android:textColorHint="@color/gray_light"
                    tools:ignore="TextViewEdits" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="50dp"
                android:layout_weight="1"

                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/iv_bg"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/tv_code_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:hint="-"
                    android:textColorHint="@color/gray_light"
                    android:fontFamily="@font/lato_regular"

                    tools:ignore="TextViewEdits" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tvchange_pin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/change_pin"
            android:textColor="@color/white" />


    </LinearLayout>
</layout>