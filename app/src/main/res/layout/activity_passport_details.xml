<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <include
            layout="@layout/top_header"
            android:id="@+id/header"/>



        <ScrollView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineHeight="26sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:maxLines="1"
                    android:id="@+id/tvTitle"
                    android:text="@string/passport_details"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="18sp"
                    tools:targetApi="p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/please_fill_the_details"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    tools:targetApi="p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:id="@+id/tvPlaceHolder"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/passport_number"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />

                <EditText
                    android:id="@+id/etPassportNumber"
                    style="@style/EditText"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="@string/passport_number"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    tools:ignore="RtlSymmetry,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/date_of_issue"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <EditText
                    android:id="@+id/etDateOfIssue"
                    style="@style/EditText"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:focusable="false"
                    android:hint="@string/date_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/date_of_expiration_date"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <EditText
                    android:id="@+id/etDateOfExpiration"
                    style="@style/EditText"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:focusable="false"
                    android:hint="@string/date_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/province_state_that_issued_the_document"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/iv_bg"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etState"
                        style="@style/EditText"
                        android:drawableEnd="@drawable/ic_drop_down_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/province_state"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/country_that_issued_the_document"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/iv_bg"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCountry"
                        style="@style/EditText"
                        android:drawableEnd="@drawable/ic_drop_down_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/country"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvContinue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tv_btn_bg"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:lineHeight="20sp"
                        android:onClick="onClick"
                        android:clickable="true"
                        android:text="@string/continue_"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="16sp"
                        tools:targetApi="p" />
                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</layout>