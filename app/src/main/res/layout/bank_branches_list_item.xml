<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.apt_x.app.model.GetBankBranchesResponse.DataEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@color/background"
        android:padding="@dimen/_5sdp">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:background="@drawable/btn_bg_lined"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/american_flag" />
        </FrameLayout>
        <TextView
            android:id="@+id/tvid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{data.bankbranchid}"
            tools:text="id"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"

            app:layout_constraintEnd_toEndOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/frameLayout2"
            app:layout_constraintTop_toTopOf="@id/frameLayout2" />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{data.bankbranchname}"
            tools:text="@string/bank_america"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"

            app:layout_constraintBottom_toBottomOf="@id/frameLayout2"
            app:layout_constraintEnd_toEndOf="@id/image"
            app:layout_constraintStart_toEndOf="@id/frameLayout2"
            app:layout_constraintTop_toTopOf="@id/tvid" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/frameLayout2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>