<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context="com.apt_x.app.views.activity.kyc.PermanentResidentDetailsActivity">
        <LinearLayout
            android:id="@+id/lhHeader"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:background="@drawable/btn_bg_lined">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:contentDescription="@string/back"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back" />
            </FrameLayout>

            <TextView
                style="@style/TextViewTitle"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:gravity="center"
                android:text="@string/permanent_resident_card"
                android:textFontWeight="500"
                tools:targetApi="p" />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lineHeight="26sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:maxLines="2"
                    android:text="@string/permanent_resident_card_details"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="18sp"
                    tools:targetApi="p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/please_fill_the_details"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    tools:targetApi="p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/card_number"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />

                <EditText
                    android:id="@+id/etCardNumber"
                    style="@style/EditText"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="@string/card_number"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    tools:ignore="RtlSymmetry,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/date_of_issue"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <EditText
                    android:id="@+id/etDateOfIssue"
                    style="@style/EditText"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="@string/date_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/date_of_expiration_date"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <EditText
                    android:id="@+id/etDateOfExpiration"
                    style="@style/EditText"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint="@string/date_hint"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/province_state_that_issued_the_document"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/iv_bg"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etState"
                        style="@style/EditText"
                        android:drawableEnd="@drawable/ic_drop_down_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/province_state"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="start"
                    android:lineHeight="20sp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/country_that_issued_the_document"
                    android:textColor="@color/et_hint"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    tools:targetApi="p" />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/iv_bg"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/etCountry"
                        style="@style/EditText"
                        android:drawableEnd="@drawable/ic_drop_down_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/country"
                        android:paddingEnd="10dp"
                        android:singleLine="true"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvContinue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tv_btn_bg"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:lineHeight="20sp"
                        android:text="@string/continue_"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="16sp"
                        tools:targetApi="p" />
                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</layout>