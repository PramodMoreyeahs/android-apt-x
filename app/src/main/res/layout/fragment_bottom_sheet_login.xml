<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_top_m"
        android:orientation="vertical"
        android:paddingBottom="15dp">



        <ImageView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/black"
            android:background="@drawable/btn_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:text="@string/please_iden"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvFingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_finger"
            android:textSize="@dimen/_11sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_fingerprint_icon"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tvPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/usepin"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvEnable"
                android:text="@string/enable"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                />


    </LinearLayout>

</layout>